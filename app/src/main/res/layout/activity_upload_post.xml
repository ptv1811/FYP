<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myTan"
    tools:context=".activity.UploadPostActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="89dp"
        android:layout_height="51dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="60dp"
        android:text="Post"
        android:textColor="@color/myOrange"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.shuhart.stepview.StepView
        android:id="@+id/stepView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="124dp"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sv_animationType="All"
        app:sv_doneCircleColor="@color/myOrange"
        app:sv_doneCircleRadius="15dp"
        app:sv_doneStepLineColor="@color/myOrange"
        app:sv_doneStepMarkColor="#ffffff"
        app:sv_doneTextColor="@color/myOrange"

        app:sv_selectedCircleColor="@color/myDark"
        app:sv_selectedCircleRadius="15dp"
        app:sv_selectedStepNumberColor="#ffffff"
        app:sv_selectedTextColor="@color/myDark"
        app:sv_stepLineWidth="1dp" />

    <Button
        android:id="@+id/closeButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_baseline_close_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/postInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/stepView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>