<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/myTan"
    android:layout_height="680dp">

    <ImageView
        android:id="@+id/settings_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/settings_background" />

    <com.ornach.nobobutton.NoboButton
        android:id="@+id/sign_out_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:nb_backgroundColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:nb_text="Sign out"
        android:fontFamily="@font/ralewayregular"
        app:nb_drawableResource="@drawable/left"
        app:nb_iconPosition="left"
        app:nb_iconPadding="100dp"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>